<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".login" android:background="#FD3649">
    <ImageView
            android:layout_width="423dp"
            android:layout_height="296dp" app:srcCompat="@drawable/mainicon"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="296dp"
    />
    <EditText
            android:layout_width="340dp"
            android:layout_height="47dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/emailtxt"
            android:hint="Email "
            android:background="@drawable/roundedtext"
            android:paddingLeft="10dp" android:layout_marginTop="172dp"
            app:layout_constraintTop_toTopOf="@+id/imageView" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>
    <EditText
            android:layout_width="340dp"
            android:layout_height="47dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordtxt"
            android:hint="Password"
            android:background="@drawable/roundedtext"
            android:paddingLeft="10dp" android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/emailtxt" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"/>
    <Button
            android:text="Login"
            android:layout_width="222dp"
            android:layout_height="49dp"
            android:id="@+id/loginbtn"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/passwordtxt"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/roundedbutton" android:textSize="18sp" android:textColor="#FFFFFF"
            android:textStyle="bold" app:layout_constraintHorizontal_bias="0.497"/>
    <TextView
            android:text="New User? Create account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/createaccountid" android:textSize="18sp"
            android:layout_marginTop="43dp" app:layout_constraintTop_toBottomOf="@+id/loginbtn"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="100dp"
            android:layout_marginStart="100dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="95dp"
            android:layout_marginRight="95dp" android:layout_marginBottom="155dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>