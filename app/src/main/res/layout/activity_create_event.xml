<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CreateEvent">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:layout_alignParentTop="true" android:layout_marginEnd="0dp"
            android:layout_marginTop="0dp" android:layout_marginRight="0dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">

            <ImageView
                    android:id="@+id/selectimg"
                    android:layout_width="206dp"
                    android:layout_height="262dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/addimage"/>
            <TextView
                    android:text="Title Of Event"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="3dp" android:textStyle="bold"/>
            <EditText
                    android:layout_width="379dp"
                    android:layout_height="40dp"
                    android:inputType="textMultiLine"
                    android:gravity="start|top"
                    android:ems="10"
                    android:id="@+id/eventtitle"
                    android:layout_gravity="center"
                    android:background="@drawable/roudedtext2"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="6dp"
                    android:textSize="20dp"

            />

            <TextView
                    android:text="Price of Ticket in \u20B9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView2"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="3dp" android:textStyle="bold"/>
            <EditText
                    android:layout_width="126dp"
                    android:layout_height="40dp"
                    android:inputType="number"
                    android:ems="10"
                    android:layout_marginStart="14dp"
                    android:id="@+id/eventprice"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/roudedtext2"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="6dp"/>

            <TextView
                    android:text="Enter Date Of Event"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView4"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="3dp" android:textStyle="bold"/>
            <TextView
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:inputType="date"
                    android:ems="10"
                    android:id="@+id/eventdate"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="14dp"
                    android:background="@drawable/roudedtext2"
                    android:textSize="20dp"
                    android:paddingLeft="6dp"
            />
            <TextView
                    android:text="Enter Time Of Event"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView5"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="3dp" android:textStyle="bold"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:inputType="time"
                    android:ems="10"
                    android:id="@+id/eventtime"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="14dp"
                    android:background="@drawable/roudedtext2"
                    android:textSize="20dp"
                    android:paddingLeft="6dp"/>
            <TextView
                    android:text="Address Of Event"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView6"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="3dp" android:textStyle="bold"/>
            <EditText
                    android:layout_width="379dp"
                    android:layout_height="90dp"
                    android:inputType="textMultiLine"
                    android:gravity="start|top"
                    android:ems="10"
                    android:id="@+id/eventaddress"
                    android:layout_gravity="center"
                    android:background="@drawable/roudedtext2"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="6dp"
                    android:textSize="20dp"
            />
            <TextView
                    android:text="State"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView7"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="3dp" android:textStyle="bold"/>
            <EditText
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:id="@+id/eventstate"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="14dp"
                    android:background="@drawable/roudedtext2"
                    android:textSize="20dp"
                    android:paddingLeft="6dp"
            />
            <TextView
                    android:text="City"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView8"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="3dp" android:textStyle="bold"/>
            <EditText
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:paddingLeft="6dp"
                    android:id="@+id/eventcity"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="14dp"
                    android:background="@drawable/roudedtext2"
                    android:textSize="20dp"
            />
            <TextView
                    android:text="Pin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView9"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="3dp" android:textStyle="bold"/>
            <EditText
                    android:layout_width="126dp"
                    android:layout_height="40dp"
                    android:inputType="number"
                    android:ems="10"
                    android:layout_marginStart="14dp"
                    android:id="@+id/pin"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/roudedtext2"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="6dp"/>
            <TextView
                    android:text="Description Of Event"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView3"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="3dp" android:textStyle="bold"/>
            <EditText
                    android:layout_width="379dp"
                    android:layout_height="174dp"
                    android:inputType="textMultiLine"
                    android:gravity="start|top"
                    android:ems="10"
                    android:id="@+id/des"
                    android:layout_gravity="center"
                    android:background="@drawable/roudedtext2"
                    android:layout_marginBottom="20dp"
                    android:paddingLeft="6dp"
                    android:textSize="20dp"
            />
            <Button
                    android:text="Create  Event"
                    android:layout_width="250dp"
                    android:layout_height="49dp"
                    android:id="@+id/createeventbtn"
                    android:background="@drawable/roundedbutton"
                    android:layout_gravity="center"
                    android:textColor="#FEFCFF"
                    android:textStyle="bold"
                    android:layout_marginBottom="20dp"/>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>